#!/bin/sh

if [ -f /app/.env ]
then
  echo "Found .env file, customizing commands..."
  # Load .env variables
  export $(cat /app/.env | xargs)
  # Use variables from .env to alter release commands if necessary
  if [ -n "$START_COMMAND" ]; then
    cat <<EOF
---
default_process_types:
  web: $START_COMMAND
EOF
  else
    cat <<EOF
---
default_process_types:
  web: bun -b start
EOF
  fi
else
  cat <<EOF
---
default_process_types:
  web: bun -b start
EOF
fi
